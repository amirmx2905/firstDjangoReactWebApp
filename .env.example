# ============================
# FRONTEND (REACT/VITE) CONFIGURATION
# ============================
# API URL for frontend requests
VITE_API_URL="http://127.0.0.1:8000"

# ============================
# DATABASE CONFIGURATION
# ============================
# PostgreSQL configuration (optional - if not completed, SQLite will be used)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="djangoreact_db" 
DB_USER="postgres"
DB_PASSWORD="your_secure_password"

# ============================
# DJANGO CONFIGURATION
# ============================
# Secret key (generate a new one for production)
SECRET_KEY="django-insecure-replace-this-with-a-proper-secret-key"

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS="localhost,127.0.0.1"

# CORS - Allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"
